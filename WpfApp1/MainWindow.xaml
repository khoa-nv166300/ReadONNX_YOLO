<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="YOLO ONNX WPF" Height="720" Width="1080" Background="#1e1e1e">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <Button x:Name="BtnLoadOnnx" Content="Load ONNX" Width="110" Margin="0,0,8,0" Click="BtnLoadOnnx_Click"/>
            <Button x:Name="BtnLoadNames" Content="Load classes.txt" Width="130" Margin="0,0,8,0" Click="BtnLoadNames_Click"/>
            <Button x:Name="BtnOpenImage" Content="Open Image" Width="110" Margin="0,0,8,0" Click="BtnOpenImage_Click"/>
            <Button x:Name="BtnDetect" Content="Detect" Width="100" Click="BtnDetect_Click"/>
            <Button x:Name="BtnRun" Content="Run" Width="100" Margin="8 0 0 0" />
            <CheckBox x:Name="ChkGpu" Content="GPU" Foreground="White" Margin="16,0,0,0"/>
            <TextBlock Text="conf:" Foreground="White" Margin="16,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="TbConf" Text="0.25" Width="60" Margin="4,0,0,0"/>
            <TextBlock Text="iou:" Foreground="White" Margin="16,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="TbIou" Text="0.45" Width="60" Margin="4,0,0,0"/>
            <TextBlock Text="imgsz:" Foreground="White" Margin="16,0,0,0" VerticalAlignment="Center"/>
            <TextBox x:Name="TbImg" Text="640" Width="60" Margin="4,0,0,0"/>
        </StackPanel>

        <!-- Viewer -->
        <Grid Grid.Row="1" Background="#2b2b2b">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Image x:Name="ImgView"/>
                    <Canvas x:Name="Overlay" IsHitTestVisible="False"/>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- Status -->
        <TextBlock Grid.Row="2" x:Name="TxtStatus" Foreground="LightGray" />
    </Grid>
</Window>

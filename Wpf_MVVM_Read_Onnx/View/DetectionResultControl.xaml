<UserControl x:Class="Wpf_MVVM_Read_Onnx.View.DetectionResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf_MVVM_Read_Onnx.View"
             xmlns:models="clr-namespace:Wpf_MVVM_Read_Onnx.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Padding="6" BorderBrush="LightGray" BorderThickness="1" Margin="2">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding Label}" FontWeight="Bold" />
            <TextBlock Text="{Binding Confidence, StringFormat=Confidence: {0:P1}}" />
            <TextBlock Text="{Binding Box, Converter={x:Null}}" />
            <!-- optional -->
        </StackPanel>
    </Border>
</UserControl>

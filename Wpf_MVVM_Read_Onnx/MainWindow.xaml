<Window x:Class="Wpf_MVVM_Read_Onnx.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_MVVM_Read_Onnx"
        xmlns:views="clr-namespace:Wpf_MVVM_Read_Onnx.View"
        mc:Ignorable="d"
       Title="YOLO ONNX WPF" Height="720" Width="1080" Background="#1e1e1e">

    <Window.Resources>
        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="Background" Value="#3c3c3c"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                             CornerRadius="4" 
                             Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#505050"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#2b2b2b"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="PrimaryButtonStyle" 
            BasedOn="{StaticResource BaseButtonStyle}">
            <Setter Property="Background" Value="#0078D4"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2b2b2b"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                             CornerRadius="4" 
                             Padding="8,0,8,0">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <FontFamily x:Key="SymbolFont">Segoe MDL2 Assets</FontFamily>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
            <Button Content="Load ONNX" Width="120" Margin="0,0,10,0" Command="{Binding LoadOnnxCommand}" Style="{StaticResource BaseButtonStyle}"/>
            <Button Content="Load classes.txt" Width="140" Margin="0,0,10,0" Command="{Binding LoadNamesCommand}" Style="{StaticResource BaseButtonStyle}"/>
            <Button Content="Open Image" Width="120" Margin="0,0,20,0" Command="{Binding OpenImageCommand}" Style="{StaticResource BaseButtonStyle}"/>
            <Button Content="Detect" Width="100" Margin="0,0,8,0" Command="{Binding DetectCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Trigger" Width="100" Margin="0,0,8,0" Command="{Binding TriggerCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
            <Button Content="Run" Width="100" Command="{Binding RunCommand}" Style="{StaticResource PrimaryButtonStyle}"/>
            <CheckBox Content="GPU" Foreground="White" Margin="25,0,0,0" IsChecked="{Binding IsGpuEnabled}" VerticalAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal" Margin="25,0,0,0" VerticalAlignment="Center">
                <TextBlock Text="conf:" Foreground="White" Margin="0,0,4,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding ConfidenceThreshold, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                <TextBlock Text="iou:" Foreground="White" Margin="15,0,4,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding IouThreshold, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                <TextBlock Text="imgsz:" Foreground="White" Margin="15,0,4,0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding ImageSize, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Row="1" Background="#2b2b2b" Margin="0,0,0,10">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Image Source="{Binding DisplayedImageSource}"/>
                    <Canvas x:Name="Overlay" IsHitTestVisible="False"/>
                </Grid>
            </ScrollViewer>
        </Grid>
        <TextBlock Grid.Row="2" Foreground="LightGray" Padding="5,0"
                Text="{Binding StatusMessage}" />
    </Grid>
</Window>
